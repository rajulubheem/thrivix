# Production Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Application Settings
APP_NAME=Strands AI Agent Platform
APP_VERSION=1.0.0
DEBUG=false
NODE_ENV=production

# API Configuration
API_V1_STR=/api/v1
BACKEND_URL=http://backend:8000

# Server Settings
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secure-random-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Required API Keys (Replace with your actual keys)
OPENAI_API_KEY=your-openai-api-key-here
TAVILY_API_KEY=your-tavily-api-key-here

# Optional: AWS Bedrock Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Agent Configuration
DEFAULT_MODEL_ID=gpt-4o-mini
DEFAULT_MAX_TOKENS=4000
MAX_HANDOFFS=20
MAX_ITERATIONS=20

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/strands_swarm.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60