# API Keys - Required
OPENAI_API_KEY=your_openai_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# API Keys - Optional
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
SERP_API_KEY=your_serp_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Session Configuration
SESSION_TIMEOUT=3600
MAX_SESSIONS=100

# Model Configuration
DEFAULT_MODEL=gpt-4
RESEARCH_MODEL=gpt-4-turbo
FAST_MODEL=gpt-3.5-turbo
MAX_TOKENS=4000
TEMPERATURE=0.7

# Database Configuration (Optional)
DATABASE_URL=sqlite:///./thrivix.db
# For PostgreSQL: postgresql://user:password@localhost/thrivix

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=change_this_to_a_random_string_in_production
JWT_SECRET_KEY=change_this_to_another_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=86400

# Feature Flags
ENABLE_MCP=true
ENABLE_TOOL_APPROVAL=true
ENABLE_RATE_LIMITING=false

# Rate Limiting (if enabled)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=txt,pdf,md,json,csv

# External Services
WEBHOOK_URL=
ANALYTICS_KEY=

# Development
HOT_RELOAD=true
VERBOSE_LOGGING=false