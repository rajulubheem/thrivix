# Thrivix AI Platform - Environment Configuration Template
# Copy this file to .env and fill in your API keys

# ===== REQUIRED API KEYS =====
# At least one AI model API key is required
OPENAI_API_KEY=sk-...your_key_here...
ANTHROPIC_API_KEY=sk-ant-...your_key_here...

# Required for web search functionality
TAVILY_API_KEY=tvly-...your_key_here...

# ===== DATABASE CONFIGURATION =====
# SQLite for development (default)
DATABASE_URL=sqlite+aiosqlite:///./thrivix.db

# PostgreSQL for production (recommended)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/thrivix

# ===== REDIS CONFIGURATION =====
# Optional but recommended for production
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# ===== APPLICATION SETTINGS =====
APP_NAME=Thrivix AI Platform
APP_VERSION=2.0.0
ENVIRONMENT=development  # development | staging | production
API_V1_STR=/api/v1
SECRET_KEY=change-this-to-a-random-64-char-string-in-production
JWT_SECRET_KEY=change-this-to-another-random-64-char-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=86400  # 24 hours in seconds
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ===== SERVER CONFIGURATION =====
HOST=0.0.0.0
PORT=8000
WORKERS=1  # Increase for production (typically 2 * CPU cores + 1)
RELOAD=true  # Set to false in production
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
DEBUG=false
HOT_RELOAD=true
VERBOSE_LOGGING=false

# ===== AI MODEL CONFIGURATION =====
DEFAULT_MODEL=gpt-4
RESEARCH_MODEL=gpt-4-turbo-preview
FAST_MODEL=gpt-3.5-turbo
MAX_TOKENS=4000
TEMPERATURE=0.7

# ===== PERFORMANCE TUNING =====
MAX_AGENTS_PER_SWARM=10
AGENT_TIMEOUT_SECONDS=300
MAX_CONCURRENT_TOOLS=5
MAX_ITERATIONS_PER_AGENT=20
STREAM_BUFFER_SIZE=8192
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10
SESSION_TIMEOUT=3600
MAX_SESSIONS=100

# ===== RATE LIMITING =====
ENABLE_RATE_LIMITING=false  # Enable in production
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # 1 hour in seconds

# ===== OPTIONAL SERVICES =====
# Additional search providers
GOOGLE_API_KEY=
SERP_API_KEY=
BING_SEARCH_API_KEY=

# Alternative AI providers
COHERE_API_KEY=
HUGGINGFACE_API_KEY=

# ===== FILE OPERATIONS =====
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=txt,pdf,md,json,csv,py,js,ts,tsx,html,css

# ===== FEATURE FLAGS =====
ENABLE_MCP=true
ENABLE_TOOL_APPROVAL=true
ENABLE_SWARM_MODE=true
ENABLE_FLOW_PRO=true
ENABLE_RESEARCH_MODE=true
ENABLE_WEBSOCKET=true
ENABLE_SSE=true
ENABLE_FILE_OPERATIONS=false  # Security consideration for production
ENABLE_CODE_EXECUTION=false  # High security risk - only enable if absolutely needed

# ===== MONITORING =====
ENABLE_METRICS=true
METRICS_PORT=9090
WEBHOOK_URL=
ANALYTICS_KEY=

# ===== SESSION MANAGEMENT =====
SESSION_SECRET_KEY=change-this-to-random-string-in-production
SESSION_EXPIRE_MINUTES=1440  # 24 hours
SESSION_STORAGE_TYPE=file  # file | redis | database